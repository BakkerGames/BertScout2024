<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:DataType="Shell"
    x:Class="BertScout2024.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BertScout2024"
    BackgroundColor="#007F00"
    FlyoutBackground="{AppThemeBinding Light=#FFFFFF, Dark=DarkGreen}"
    Shell.FlyoutBehavior="Flyout"
    Shell.TitleColor="White"
    Title="BertScout2024"
    >

    <ShellContent
        Title="Match Schedule"
        FlexLayout.AlignSelf="Center"
        ContentTemplate="{DataTemplate local:MatchSchedulePage}"
        Route="MatchSchedulePage"
        />

    <ShellContent
        Title="BERT Scouting 2024"
        FlexLayout.AlignSelf="Center"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        />

    <ShellContent
        Title="List Matches"
        FlexLayout.AlignSelf="Center"
        ContentTemplate="{DataTemplate local:ListPage}"
        Route="ListPage"
        />

    <ShellContent
        Title="Airtable"
        FlexLayout.AlignSelf="Center"
        ContentTemplate="{DataTemplate local:AirtablePage}"
        Route="AirtablePage"
        />

    <ShellContent
        Title="About"
        FlexLayout.AlignSelf="Center"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage"
        />

</Shell>
